# Java version switcher function
setjava() {
    case $1 in
        17)
            export JAVA_HOME=/opt/homebrew/opt/openjdk@17/libexec/openjdk.jdk/Contents/Home
            export PATH="/opt/homebrew/opt/openjdk@17/bin:${PATH//\/opt\/homebrew\/opt\/openjdk@17\/bin:/}"
            ;;
        23)
            export JAVA_HOME=/opt/homebrew/opt/openjdk/libexec/openjdk.jdk/Contents/Home
            export PATH="/opt/homebrew/opt/openjdk/bin:${PATH//\/opt\/homebrew\/opt\/openjdk\/bin:/}"
            ;;
        *)
            echo "Usage: setjava [17|23]"
            return 1
            ;;
    esac
    echo "Switched to Java $1:"
    java -version
}


