# pyenv (lazy-loaded)
export PYENV_ROOT="$HOME/.pyenv"
[[ -d $PYENV_ROOT/bin ]] && export PATH="$PYENV_ROOT/bin:$PATH"
pyenv() {
  unset -f pyenv python python3 pip pip3
  eval "$(command pyenv init -)"
  pyenv "$@"
}
python() { unset -f pyenv python python3 pip pip3; eval "$(command pyenv init -)"; python "$@"; }
python3() { unset -f pyenv python python3 pip pip3; eval "$(command pyenv init -)"; python3 "$@"; }
pip() { unset -f pyenv python python3 pip pip3; eval "$(command pyenv init -)"; pip "$@"; }
pip3() { unset -f pyenv python python3 pip pip3; eval "$(command pyenv init -)"; pip3 "$@"; }

