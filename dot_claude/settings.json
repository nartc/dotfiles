{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "permissions": {
    "allow": [
      "Bash(git remote add:*)",
      "Bash(git fetch:*)",
      "Bash(git cherry-pick:*)",
      "mcp__linear-server__get_issue",
      "mcp__linear-server__list_comments",
      "Bash(npx nx sync-artifacts)",
      "Bash(git -C /Users/nartc/code/github/nrwl/nx-ai-agents-config status)"
    ],
    "defaultMode": "default"
  },
  "enabledPlugins": {
    "notion-workspace-plugin@notion-plugin-marketplace": true
  },
  "promptSuggestionEnabled": false,
  "mcpServers": {
    "local-pr-reviewer": {
      "type": "local",
      "command": [
        "node",
        "/Users/nartc/.config/local-pr-reviewer/dist/mcp-server/index.js"
      ]
    }
  }
}
